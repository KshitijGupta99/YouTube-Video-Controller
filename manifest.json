{
  "manifest_version": 3,
  "name": "Smart Video Sync",
  "version": "1.0",
  "permissions": ["tabs", "storage", "activeTab", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}